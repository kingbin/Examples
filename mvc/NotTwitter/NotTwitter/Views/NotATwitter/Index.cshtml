@model IEnumerable<NotTwitter.Models.NotATweet>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Username
        </th>
        <th>
            Text
        </th>
        <th>
            Published
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
			@item.Username
        </td>
        <td>
			@item.Text
        </td>
        <td>
			@String.Format("{0:g}", item.Published)
        </td>
    </tr>
}

</table>


